<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="30dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="20dp"
    android:paddingBottom="4dp"
    android:paddingTop="4dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="ui进程信息"
        android:textSize="14sp"
        android:layout_centerVertical="true"
        android:textColor="@color/color_txt_enable_gray"
        android:id="@+id/layout_process_detail_lv_header_tv_title"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/layout_process_detail_lv_header_tv_title"
        android:id="@+id/layout_process_detail_lv_header_tv_state"
        tools:text="(未启动)"
        android:text="(未运行)"
        android:visibility="gone"
        android:layout_centerVertical="true"
        android:textColor="@color/colorRed"
        android:textSize="11sp"
        android:layout_marginLeft="3dp"
        />
</RelativeLayout>
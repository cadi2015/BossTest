<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/home_query_input"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="插入"
        android:layout_below="@id/home_query_input"
        android:id="@+id/home_query_btn_insert"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/home_query_btn_insert"
        android:text="查询"
        android:id="@+id/home_query_btn_query"
        android:layout_alignBottom="@id/home_query_btn_insert"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/home_query_show"
        android:layout_alignParentBottom="true"
        android:textSize="20sp"/>
</RelativeLayout>
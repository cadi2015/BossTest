<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_bg"
        android:orientation="vertical"
        android:padding="10dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:id="@+id/main_fragment_short_video_rl_hint">
                <TextView
                    android:id="@+id/main_fragment_short_video_tv_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="1"
                    android:text="包信息"
                    android:layout_centerHorizontal="true"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textStyle="bold" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_launcher_short_video"
                    android:layout_below="@id/main_fragment_short_video_tv_hint"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/main_fragment_short_video_tv_show_package"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/main_fragment_short_video_rl_hint"
                android:lineSpacingExtra="@dimen/package_info_tv_line_space"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/colorBlack"
                tools:text="我是调试用的我是调试用的我是调试用的我是调试用的我是调试用的我是调试用的我是调试用的我是调试用的我是调试用的" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/main_fragment_short_video_btn_file_test"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/btn_tool_height"
                android:layout_centerVertical="true"
                android:background="@drawable/btn_bg"
                android:gravity="left|center"
                android:paddingLeft="@dimen/btn_padding_left_and_right"
                android:paddingRight="@dimen/btn_padding_left_and_right"
                android:text="切换Test环境"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="@dimen/btn_tool_txt_size" />

            <Button
                android:id="@+id/main_fragment_short_video_btn_file_pre"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/btn_tool_height"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@id/main_fragment_short_video_btn_file_test"
                android:background="@drawable/btn_bg"
                android:gravity="center|left"
                android:paddingLeft="@dimen/btn_padding_left_and_right"
                android:paddingRight="@dimen/btn_padding_left_and_right"
                android:text="切换Pre环境"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="@dimen/btn_tool_txt_size" />

            <Button
                android:id="@+id/main_fragment_short_video_btn_file_online"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/btn_tool_height"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/main_fragment_short_video_btn_file_pre"
                android:background="@drawable/btn_bg"
                android:gravity="left|center"
                android:paddingLeft="@dimen/btn_padding_left_and_right"
                android:paddingRight="@dimen/btn_padding_left_and_right"
                android:text="切换Online环境"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="@dimen/btn_tool_txt_size" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
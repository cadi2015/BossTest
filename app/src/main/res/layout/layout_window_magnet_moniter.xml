<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/monitor_bg"
    android:paddingRight="5dp"
    android:paddingLeft="5dp"
    android:paddingTop="3dp"
    android:paddingBottom="3dp"
    android:gravity="center_vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="内存与Cpu实时监控"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:id="@+id/magnet_tv_title"
        android:textSize="7sp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorRed"
        />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/magnet_rl_ui"
            android:layout_below="@id/magnet_tv_title">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UI"
                android:textSize="11sp"
                android:layout_marginRight="4dp"
                android:textColor="@color/colorPrimary"
                android:id="@+id/magnet_tv_subject_ui"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="内存"
                android:gravity="left"
                android:textColor="@color/color_guide_txt_white"
                android:id="@+id/magnet_tv_ui_mem"
                android:textSize="10sp"
                android:layout_toRightOf="@id/magnet_tv_subject_ui"/>
            <TextView
                style="@style/MagnetMsgSty"
                tools:text="Cpu"
                android:layout_below="@id/magnet_tv_ui_mem"
                android:id="@+id/magnet_tv_ui_cpu"
                android:layout_alignLeft="@id/magnet_tv_ui_mem"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/magnet_rl_ui"
            android:layout_alignLeft="@id/magnet_rl_ui"
            android:id="@+id/magnet_rl_dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DP"
                android:textSize="11sp"
                android:layout_marginRight="4dp"
                android:layout_centerVertical="true"
                android:textColor="@color/colorPrimary"
                android:id="@+id/magnet_tv_subject_dp"
                />
            <TextView
                style="@style/MagnetMsgSty"
                android:id="@+id/magnet_tv_dp_mem"
                android:gravity="left"
                tools:text="内存"
                android:layout_toRightOf="@id/magnet_tv_subject_dp"
                />
            <TextView
                style="@style/MagnetMsgSty"
                tools:text="Cpu"
                android:id="@+id/magnet_tv_dp_cpu"
                android:layout_alignLeft="@id/magnet_tv_dp_mem"
                android:layout_below="@id/magnet_tv_dp_mem"/>
        </RelativeLayout>



</RelativeLayout>
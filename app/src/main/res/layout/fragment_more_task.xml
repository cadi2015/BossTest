<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_bg"
    android:gravity="center">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/more_task_rl_item1"
        android:layout_weight="1"
        android:gravity="center">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="105dp"
            android:layout_marginLeft="30dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/http_bg"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Http"
                android:gravity="bottom|center_horizontal"
                android:textSize="14sp"
                android:textColor="@color/colorPrimary"
                android:id="@+id/more_task_tv_http"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_margin="3dp"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="105dp"
            android:layout_centerHorizontal="true">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/thunder_bg"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Thunder"
                android:textSize="14sp"
                android:gravity="bottom|center_horizontal"
                android:layout_gravity="bottom|center_horizontal"
                android:textColor="@color/colorPrimary"
                android:id="@+id/more_task_tv_thunder"
                android:layout_margin="3dp"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="105dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ed2k_bg"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom|center_horizontal"
                android:text="Ed2k"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                android:background="@null"
                android:layout_gravity="bottom|center_horizontal"
                android:id="@+id/more_task_tv_ed2k"
                android:layout_margin="3dp"/>
        </FrameLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/more_task_rl_item1"
        android:id="@+id/more_task_rl_item2"
        android:layout_weight="1"
        android:gravity="center">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="105dp"
            android:layout_marginLeft="30dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ftp_bg"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Ftp"
                android:textColor="@color/colorPrimary"
                android:gravity="bottom|center_horizontal"
                android:textSize="14sp"
                android:layout_gravity="bottom|center_horizontal"
                android:id="@+id/more_task_tv_ftp"
                android:layout_margin="3dp"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="105dp"
            android:id="@+id/more_task_fl_various"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="30dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/various_bg"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="各种资源"
                android:layout_gravity="bottom"
                android:gravity="bottom|center_horizontal"
                android:textColor="@color/colorPrimary"
                android:id="@+id/more_task_tv_various"
                android:layout_margin="3dp"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="105dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/magnet_bg"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Magnet"
                android:layout_gravity="bottom"
                android:gravity="bottom|center_horizontal"
                android:textColor="@color/colorPrimary"
                android:id="@+id/more_task_tv_magnet"
                android:layout_margin="3dp"/>
        </FrameLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/more_task_rl_item2"
        android:id="@+id/more_task_rl_item3"
        android:layout_weight="1"
        android:gravity="center">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="105dp"
            android:layout_marginLeft="30dp"
            android:id="@+id/more_task_rl_web_view_ed2000"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/web_view_mp4_bg"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="网站：ED2000"
                android:textColor="@color/colorPrimary"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:textSize="12sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="105dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/more_task_rl_web_view_bt">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/web_view_middle"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="网站：bt天堂"
                android:textColor="@color/colorPrimary"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="105dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:id="@+id/more_task_rl_web_view_bd">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/web_view_other_bg"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/colorPrimary"
                android:text="网站：手机百度"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>